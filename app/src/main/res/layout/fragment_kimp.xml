<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.KimpFragment">

    <data>
        <variable
            name="isLoaded"
            type="boolean" />
        <variable
            name="sortPriceByDesc"
            type="Boolean" />
        <variable
            name="sortKimpByDesc"
            type="Boolean" />

        <variable
            name="exc"
            type="String" />
        <variable
            name="count"
            type="String" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/kimp_logo_nobg"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/aritadotum_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"/>

        <RelativeLayout
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:paddingLeft="15dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_hamburger"
                app:tint="#424141" />
        </RelativeLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <TextView
        android:id="@+id/tv_excrate_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExcRate"
        app:layout_constraintTop_toBottomOf="@id/collapsingToolbarLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/aritadotum_medium"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_excrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{exc}"
        app:layout_constraintTop_toBottomOf="@id/collapsingToolbarLayout"
        app:layout_constraintLeft_toRightOf="@id/tv_excrate_colon"
        android:fontFamily="@font/aritadotum_medium"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_totalnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/aritadotum_medium"
        android:text="@{count}"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/root_tab"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_excrate_colon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:background="@color/weakgrey">
    <TextView
        android:id="@+id/tv_tabname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="@string/name"
        android:textColor="?android:textColorPrimary"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_tabprice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_tabname"
        android:layout_marginLeft="90dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
    <TextView
        android:id="@+id/tv_tabprice"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:text="@string/price"
        android:textColor="?android:textColorPrimary"/>
    <ImageView
        android:id="@+id/iv_sortprice"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_tabprice"
        android:layout_marginLeft="3dp"
        app:isSortByDesc="@{sortPriceByDesc}"
        android:src="@drawable/sort"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_tabkp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="50dp"
            android:paddingLeft="25dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
        <TextView
            android:id="@+id/tv_tabkp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:text="@string/Kpremium"
            android:textColor="?android:textColorPrimary"/>

        <ImageView
            android:id="@+id/iv_sortkp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_tabkp"
            android:layout_marginLeft="3dp"
            app:isSortByDesc="@{sortKimpByDesc}"
            android:src="@drawable/sort"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:isGone="@{!isLoaded}"
        app:layout_constraintTop_toBottomOf="@id/root_tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rv_kimp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"/>

    <ProgressBar
        app:isGone="@{isLoaded}"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/root_tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>