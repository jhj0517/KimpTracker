<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.UpbitFragment">

    <data>
        <variable
            name="isLoaded"
            type="boolean" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/iv_upbitlogo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/upbit"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:paddingLeft="15dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_hamburger"
                app:tint="#424141"/>
        </RelativeLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <TextView
        android:id="@+id/tv_thisisupbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/collapsingToolbarLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:layout_marginLeft="10dp"
        android:text="@string/thisis_upbit"/>

    <TextView
        android:id="@+id/tv_totalnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="()"
        app:layout_constraintBottom_toTopOf="@id/root_tab"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/aritadotum_medium"
        android:layout_marginLeft="3dp"
        android:textSize="11sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_thisisupbit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:background="@color/weakgrey">
        <TextView
            android:id="@+id/tv_tabname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/name"
            android:textColor="?android:textColorPrimary"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_tabprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_tabname"
            android:layout_marginLeft="90dp"
            android:paddingRight="20dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <TextView
                android:id="@+id/tv_tabprice"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center_vertical"
                android:text="@string/price"
                android:textColor="?android:textColorPrimary"/>
            <ImageView
                android:id="@+id/iv_sortprice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_tabprice"
                android:layout_marginLeft="3dp"
                android:src="@drawable/sort"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_tab_changerate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="50dp"
            android:paddingLeft="25dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <TextView
                android:id="@+id/tv_tabkp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:text="@string/changerate"
                android:textColor="?android:textColorPrimary"/>

            <ImageView
                android:id="@+id/iv_sortkp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_tabkp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/sort"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:isGone="@{!isLoaded}"
        app:layout_constraintTop_toBottomOf="@id/root_tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rv_upbit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"/>

    <ProgressBar
        app:isGone="@{isLoaded}"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/root_tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>